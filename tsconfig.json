{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["node", "webpack-env", "vite-plugin-svg-icons/client"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "mock/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "./components.d.ts"
    ],
    "exclude": ["node_modules"]
}
